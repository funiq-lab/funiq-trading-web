---
import { SUPPORTED_LOCALES, DEFAULT_LOCALE } from "@/i18n/config";
import BaseLayout from "@/layouts/BaseLayout.astro";
import type { GetStaticPaths } from "astro";
import { translateFor } from "@/i18n/utils";
import { Logo } from "@/components/SiteLogo";


export const getStaticPaths = (async () =>
  SUPPORTED_LOCALES.map(locale => ({
    params: { locale: locale === DEFAULT_LOCALE ? undefined : locale },
  }))) satisfies GetStaticPaths;

const t = translateFor(Astro.currentLocale);
---

<BaseLayout
  title={t("site.title")}
  description={t("site.desc")}
>
  <div
  class:list={[
    "pattern py-6 w-full md:w-3/4 md:max-w-8xl flex flex-col items-center justify-center",
  ]}
>
  <div class="flex flex-col">
    <div class="flex flex-col-reverse md:flex-row">
      <div
        class="flex flex-col gap-4 md:w-1/2 p-8 justify-center items-center md:items-start"
      >
        <h1
          class="text-pretty text-center md:text-left md:text-4xl lg:text-5xl tracking-wide"
        >
          {t("site.title")}
        </h1>
        <span class="md:text-2xl lg:text-3xl text-muted-foreground">
          {t("site.desc")}
        </span>
      </div>
      <div class="hidden md:flex w-1/3 justify-center align-middle">
        <Logo className="size-full" />
      </div>
    </div>
  </div>
</div>
</BaseLayout>
